generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "windows"]
}

datasource db {
  provider = "postgresql"
}

enum Role {
  CUSTOMER
  ARTIST
  ADMIN
}

enum ModelStatus {
  PENDING
  APPROVED
  REJECTED
}


model User {
  id       String @id @default(uuid())
  email    String @unique
  username String @unique
  password String
  role     Role   @default(CUSTOMER)

  models    Model[]    @relation("artist_models")
  purchases Purchase[]
  reviews   Review[]
  wishlist  Wishlist[]
  orders    Order[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Model {
  id          String  @id @default(uuid())
  title       String
  description String?
  price       Int // in IDR
  file_url    String
  preview_url String?
  
  status      ModelStatus @default(PENDING)

  artist_id String
  artist    User   @relation("artist_models", fields: [artist_id], references: [id])

  category_id String?
  category    Category? @relation(fields: [category_id], references: [id])

  purchases  Purchase[]
  reviews    Review[]
  wishlist   Wishlist[]
  tags       Tag[]
  order_items Order_Item[]

  created_at DateTime @default(now())
}

enum License_Type {
  PERSONAL_USE
  COMMERCIAL_USE
}

model Purchase {
  id String @id @default(uuid())

  user_id  String
  model_id String

  user  User  @relation(fields: [user_id], references: [id])
  model Model @relation(fields: [model_id], references: [id])

  price_paid Int // in IDR
  license    License_Type @default(PERSONAL_USE)

  created_at DateTime @default(now())

  @@unique([user_id, model_id])
  @@index([user_id])
  @@index([model_id])
}

model Category {
  id   String @id @default(uuid())
  name String @unique
  slug String @unique

  models Model[]

  created_at DateTime @default(now())
}

model Tag {
  id   String @id @default(uuid())
  name String @unique

  models Model[]

  created_at DateTime @default(now())
}

model Review {
  id      String @id @default(uuid())
  rating  Int    // 1-5
  comment String?

  user_id  String
  model_id String

  user  User  @relation(fields: [user_id], references: [id])
  model Model @relation(fields: [model_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  
  @@unique([user_id, model_id]) // One review per model per user
}

model Wishlist {
  id String @id @default(uuid())

  user_id  String
  model_id String

  user  User  @relation(fields: [user_id], references: [id])
  model Model @relation(fields: [model_id], references: [id])

  created_at DateTime @default(now())

  @@unique([user_id, model_id])
}

enum Order_Type {
  ASSET
  PRINT_JOB
}

enum Order_Status {
  PENDING
  PAID
  FAILED
  CANCELLED
}

model Order {
  id String @id @default(uuid())

  user_id String
  user    User   @relation(fields: [user_id], references: [id])

  total_amount Int          @default(0) // IDR
  status       Order_Status @default(PENDING)
  type         Order_Type   @default(ASSET)

  snap_token   String?
  snap_redirect_url String?

  items    Order_Item[]
  payments Payment[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Order_Item {
  id String @id @default(uuid())

  order_id String
  order    Order  @relation(fields: [order_id], references: [id])

  model_id String?
  model    Model? @relation(fields: [model_id], references: [id])

  price Int // IDR at time of purchase

  created_at DateTime @default(now())
}

model Payment {
  id String @id @default(uuid())

  order_id String
  order    Order  @relation(fields: [order_id], references: [id])

  transaction_id      String   @unique // Midtrans Transaction ID
  payment_type        String
  gross_amount        Int      // IDR
  transaction_status  String
  fraud_status        String?
  
  raw_response        Json?

  created_at DateTime @default(now())
}

